#!/usr/bin/env ruby
require File.expand_path('../lib/ruby_game', File.dirname(__FILE__))

RubyGame::Monster.define :ghost do
  image_name "ghost1"
  velocity 2
  action :move_up, velocity: 4, repeat: 40
  action :move_down, repeat: 80
end

game = RubyGame::Game.new
game.start! do
  player RubyGame::Player.new(590, 420)
  ruby RubyGame::Ruby.new(65, 115)
  monsters Array.new(5) {RubyGame::Monster.build(:ghost)}
end